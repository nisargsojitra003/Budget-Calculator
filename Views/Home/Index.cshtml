@model TableModel;
@using Newtonsoft.Json;
@{
    ViewData["Title"] = "Home";
}
<div class="container mt-3">
    <div class="row">
        <div class="col-12 activityTitle mb-4">
            <h3><strong>Budget Calculator</strong></h3>
        </div>
        <div style="margin-left:8rem;" class="row mb-3">
            <div class="col-md-4 d-flex align-items-center">
                <input type="date" class="form-control custom-date-input me-2" id="fromDate" name="fromDate" placeholder="From Date" required>
            </div>
            <div class="col-md-4 d-flex align-items-center">
                <input type="date" class="form-control custom-date-input me-2" id="toDate" name="toDate" placeholder="To Date" required>
            </div>
            <div class="col-md-4 d-flex mb-3 justify-content-start align-items-center">
                <button type="button" id="generateBtn" class="btn btn-primary generateTable me-2">Generate</button>
                <button data-toggle="tooltip" data-placement="top" title="Export" style="display:none" id="exportBtn" onclick="ExportTable()" type="button" class="btn btn-success me-2">
                    <i class="fa-solid fa-file-export"></i>
                </button>
                <button id="showActivity" style="display:none" type="button" class="btn btn-info fullActivityList custom-scrollbar">Activity</button>
            </div>
        </div>

    </div>
</div>


<ul class='custom-menu'>
    <li data-action="first">Apply to all</li>
</ul>
<div id="activityList" class="mt-1"></div>

<div id="tableContainer" class="mt-4">
</div>